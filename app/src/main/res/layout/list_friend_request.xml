<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/list_friend_request"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:background="#cccccc"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0px"
                android:layout_weight="30"
                android:layout_height="match_parent">
                <TextView
                android:id="@+id/list_friend_request_name"
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginRight="10sp"
                android:layout_marginTop="5sp"
                android:layout_marginBottom="5sp"
                android:layout_width="0px"
                android:layout_weight="10"
                android:layout_height="match_parent">
               <Button
                   android:id="@+id/list_friend_request_yes"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:text="@string/yes"
                   android:textColor="#FFFFFF"
                   android:background="#3394ff"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginRight="10sp"
                android:layout_marginTop="5sp"
                android:layout_marginBottom="5sp"
                android:layout_width="0px"
                android:layout_weight="10"
                android:layout_height="match_parent">
                <Button
                    android:id="@+id/list_friend_request_no"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/no"
                    android:textColor="#FFFFFF"
                    android:background="#FF3333"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/addressbook_list_group"
            android:layout_width="match_parent"
            android:layout_height="0px">
            <ListView
                android:id="@+id/addressbook_list_group_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>